<% content_for :breadcrumbs do %>
  <%= render flowbite(:breadcrumb), html: "Home", href: root_path %>
  <%= render flowbite(:breadcrumb), href: demo_path(:method), active: true do %>
    <%= render heroicon(:menu_alt4), class: "h-5 w-auto text-blue-500" %>
    <code class="font-light text-gray-400 scale-90 dark:text-gray-500">invoke</code>
    Assignment
  <% end %>
<% end %>

<%= render "demos" do %>
  <h2 class="inline-flex items-center mb-4 text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white">
    <%= render heroicon(:menu_alt4), class: "h-10 w-auto mr-3 text-blue-500" %>
    <code class="mr-3 font-medium text-gray-400 dark:text-gray-500">invoke</code>
    Assignment
  </h2>
  <p class="mb-8 font-light text-blue-500 lg:text-xl">
    Assign any property value on the client.
  </p>

  <%= render component(:divider) %>

  <div class="grid gap-16 pt-16 sm:grid-cols-2 lg:grid-cols-1">
    <%= render "demo", title: "Assign Dataset Values", heroicon: :adjustments do %>
      <span id="assignment-demo-description">We can assign pretty much assign any property value with TurboReady.</span>
      <%= render flowbite(:alert), type: :warning, class: "flex mt-4" do %>
        <%= render heroicon(:exclamation), class: "w-6 h-6 mr-2" %>
        Be sure to open the JavaScript console and inspect the <code class="mx-2">body</code> element.
      <% end %>
      <%= render component(:code), language: :erb, class: "my-6 text-sm", source_path: "app/views/demos/assignment/_stream.html.erb" %>
      <div class="grid grid-cols-2">
        <%= turbo_frame_tag "assignment-demo-button", src: frame_path(Base64.urlsafe_encode64("demos/assignment/button"), :noop) %>
        <%= render component(:reload_link), class: "text-sm opacity-70 block text-right" %>
      </div>
    <% end %>

    <%= render component(:divider) %>

    <div class="grid grid-cols-2">
      <%= link_to demo_path(:method), class: css("flowbite.link.default") do %>
        <%= render heroicon(:arrow_left), class: "w-5 h-5 inline" %>
        <code class="font-light text-gray-400 scale-90 dark:text-gray-500">invoke</code> Method
      <% end %>
      <%= link_to demo_path(:event), class: css("flowbite.link.default", "text-right") do %>
        <code class="font-light text-gray-400 scale-90 dark:text-gray-500">invoke</code> Event
        <%= render heroicon(:arrow_right), class: "w-5 h-5 inline" %>
      <% end %>
    </div>
  </div>
<% end %>
