<% content_for :breadcrumbs do %>
  <%= render flowbite(:breadcrumb), html: "Home", href: root_path %>
  <%= render flowbite(:breadcrumb), html: "Demos", href: demos_path %>
  <%= render flowbite(:breadcrumb), html: "Assignment", href: demo_path(:assignment), active: true %>
<% end %>

<%= render component(:demos) do %>
  <h2 class="inline-flex items-center mb-4 text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white">
    <%= render heroicon(:bars_2), class: "h-10 w-auto mr-3 text-blue-500" %>
    <code class="mr-3 font-medium text-gray-400 dark:text-gray-500">invoke</code>
    Assignment
  </h2>
  <p class="mb-8 font-light text-blue-500 lg:text-xl">
    Assign any property value on the client.
  </p>

  <%= render component(:divider) %>

  <div class="grid gap-16 pt-16 sm:grid-cols-2 lg:grid-cols-1">
    <%= render component(:demo), title: "Assign Dataset Values", heroicon: :adjustments_horizontal do %>
      <span id="assignment-demo-description">We can assign pretty much assign any property value with TurboBoost::Streams.</span>

      <%= render flowbite(:alert), type: :info, class: "flex items-center mt-4" do %>
        <%= render heroicon(:information_circle), class: "w-6 h-6 mr-2" %>
        This is not a method call. Pay attention to the <code class="mx-2">=</code> sign that denotes an assignment.
      <% end %>

      <%= render flowbite(:alert), type: :warning, class: "flex items-center mt-4" do %>
        <%= render heroicon(:exclamation), class: "w-6 h-6 mr-2" %>
        Open the JavaScript console and inspect the <code class="mx-1">body</code> element.
      <% end %>

      <%= render component(:code), language: :erb, class: "my-6 text-sm", source_path: "app/views/demos/assignment/_stream.html.erb" %>

      <div class="grid grid-cols-2">
        <%= turbo_frame_tag "assignment-demo-button", src: frame_path(Base64.urlsafe_encode64("demos/assignment/button"), :noop) %>
        <%= render component(:reload_link), class: "text-sm opacity-70 block text-right" %>
      </div>
    <% end %>

    <%= render component(:divider) %>

    <div class="grid grid-cols-2">
      <%= link_to demo_path(:method), class: css("flowbite.link.paragraph") do %>
        <%= render heroicon(:arrow_left), class: "w-5 h-5 inline" %>
        <code class="font-light text-gray-400 scale-90 dark:text-gray-500">invoke</code>
        Method
      <% end %>
      <%= link_to demo_path(:event), class: css("flowbite.link.paragraph", "text-right") do %>
        <code class="font-light text-gray-400 scale-90 dark:text-gray-500">invoke</code>
        Event
        <%= render heroicon(:arrow_right), class: "w-5 h-5 inline" %>
      <% end %>
    </div>
  </div>
<% end %>
