#!/bin/bash

# ============================================================================================================
# Install Playwright dependencies, SEE: https://playwright.dev
# ============================================================================================================
playwright="/opt/playwright-installed.txt"
if ! [ -f "$playwright" ]; then
  touch $playwright

  apt-get -y --no-install-recommends install \
  libasound2 \
  libatk-bridge2.0-0 \
  libatk1.0-0 \
  libc6 \
  libcairo-gobject2 \
  libcairo2 \
  libcups2 \
  libdbus-1-3 \
  libexpat1 \
  libfontconfig1 \
  libfreetype6 \
  libgbm1 \
  libgdk-pixbuf2.0-0 \
  libglib2.0-0 \
  libgtk-3-0 \
  libnss3 \
  libpango-1.0-0 \
  libpangocairo-1.0-0 \
  libstdc++6 \
  zlib1g

  apt-get clean
  yarn playwright install
fi
