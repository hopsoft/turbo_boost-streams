#!/bin/bash

# ============================================================================================================
# Install JavaScript dependencies
# ============================================================================================================
installed="/opt/javascript-dependencies-installed.txt"
if ! [ -f "$installed" ]; then
  touch $installed

  curl -fsSL https://deb.nodesource.com/setup_16.x | bash -
  apt-get -y --no-install-recommends install nodejs
  apt-get clean

  npm install -g yarn
  yarn install
fi
